<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <!-- Bottom Navigation Bar -->
    <LinearLayout
        android:id="@+id/bottom_nav"
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="@drawable/bottom_nav"
        android:orientation="horizontal"
        android:paddingHorizontal="0dp"
        android:gravity="center"
        android:layout_marginTop="10dp"
        app:layout_constraintBottom_toBottomOf="parent">

        <!-- First Icon -->
        <LinearLayout
            android:id="@+id/nav_home"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_home"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/home_inactive" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Home"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/tab_inactive"
                />
        </LinearLayout>

        <!-- Second Icon -->
        <LinearLayout
            android:id="@+id/nav_stats"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_stats"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/statistics_inactive" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Statistics"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/tab_inactive"
                 />
        </LinearLayout>

        <!-- Spacer (for plus_icon) -->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1" />

        <!-- Third Icon -->
        <LinearLayout
            android:id="@+id/nav_community"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_community"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/community_ia" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Community"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/tab_inactive"
                />
        </LinearLayout>

        <!-- Fourth Icon -->
        <LinearLayout
            android:id="@+id/nav_settings"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:gravity="center"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/icon_setting"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:src="@drawable/setting_ia" />
            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Settings"
                android:textSize="13sp"
                android:textAlignment="center"
                android:textColor="@color/tab_inactive"
                 />
        </LinearLayout>
    </LinearLayout>

    <!-- Center Add Button -->
    <ImageView
        android:id="@+id/add_button"
        android:layout_width="50dp"
        android:layout_height="50dp"
        android:layout_marginBottom="20dp"
        android:src="@drawable/plus_icon"
        android:background="@drawable/circular"
        android:padding="12dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
